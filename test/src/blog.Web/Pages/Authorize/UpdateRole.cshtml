@page
@model blog.Web.Pages.Authorize.UpdateRoleModel
@{
    ViewData["Title"] = "UpdateRole";
}
    <div style=""></div>
    <form method="post">
        <input type="hidden" asp-for="@Model.permissionGroupList.EntityDisplayName" />

        @for (int i = 0; i < Model.permissionGroupDto.Count; i++)
        {
            //@if (Model.permissionGroupDto[i].Name.Equals("blogproject"))
            //{
                <input type="hidden" asp-for="@Model.permissionGroupDto[i].Name" />

                for (int j = 0; j < Model.permissionGroupDto[i].Permissions.Count; j++)
                {
                    var perName = Model.permissionGroupDto[i].Permissions[j].Name;
                    if (perName.Equals("Post") || perName.Equals("Category") || perName.Equals("User") || perName.Equals("Author"))
                    {
                        <input type="checkbox" asp-for="@Model.permissionGroupDto[i].Permissions[j].IsGranted" />

                        <b>@Model.permissionGroupDto[i].Permissions[j].Name</b>
                        <br />
                    }
                    else
                    {
                        <div style="margin-left: 20px;">
                            <input type="checkbox" asp-for="@Model.permissionGroupDto[i].Permissions[j].IsGranted" />
                            <label>@Model.permissionGroupDto[i].Permissions[j].Name</label> <br />
                        </div>
                    }

                    <input type="hidden" asp-for="@Model.permissionGroupDto[i].Permissions[j].Name" />
                    <input type="hidden" asp-for="@Model.permissionGroupDto[i].Permissions[j].DisplayName" />
                    <input type="hidden" asp-for="@Model.permissionGroupDto[i].Permissions[j].ParentName" />
                //}
            }
         }

        <input type="hidden" asp-for="@Model.ProviderKey" />
        <input type="hidden" asp-for="@Model.ProviderName" />
        <button type="submit" class="btn btn-success">Update</button>
    </form>
