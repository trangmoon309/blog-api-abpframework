@page
@model blog.Web.Pages.Post.UpdatePostModel
@{
    ViewData["Title"] = "UpdatePost";
    var categories = Model.CategoryList;
}

    <div class="container-fluid" style="background-color:white;position: absolute;top: 15%;padding-bottom:30px;padding-top:30px;">
        <div class="row">

            <div class="col-md-8 col-md-offset-2">

                <h1>Update post</h1>
                <br />
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.UpdatedPostDto.Id" />
                    <input type="hidden" asp-for="@Model.UpdatedPostDto.CreationTime" />
                    <input type="hidden" asp-for="@Model.UpdatedPostDto.CreatedAt" />
                    <div class="form-group">
                        <label for="title">Title <span class="require">*</span></label>
                        <input type="text" class="form-control" id="title" asp-for="@Model.UpdatedPostDto.Title" />
                    </div>

                    <div class="form-group">
                        <label for="author">Author <span class="require">*</span></label>
                        <input type="text" class="form-control" id="author" asp-for="@Model.UpdatedPostDto.Author" />
                    </div>

                    <div class="form-group">
                        <label for="cate">Category <span class="require">*</span></label>
                        <select type="text" class="form-control" id="cate" asp-for="@Model.UpdatedPostDto.CategoryId">
                            @for (int i = 0; i < categories.Count; i++)
                            {
                                <option value="@categories[i].Id">@categories[i].Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" class="form-control" id="description" asp-for="@Model.UpdatedPostDto.Description" />
                    </div>

                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea rows="5" class="form-control" id="content" asp-for="@Model.UpdatedPostDto.Content"></textarea>
                    </div>

                    <h4><b>Change Photo(Optionals)...</b></h4>
                    <div class="form-group">
                        <label for="photo">Photo</label>
                        <input type="file" asp-for="@Model.UpdatedPostDto.PhotoFile" multiple />
                    </div>

                    <div class="form-group">
                        <p><span class="require">*</span> - required fields</p>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Update
                        </button>
                        <button type="reset" class="btn btn-default">
                            Cancel
                        </button>
                        @if (Model.flag)
                        {
                            <span class="text-success">Update Successfully!</span>
                        }
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>

                <form method="post">
                    <input type="hidden" asp-for="@Model.UpdatedPostDto.Id" />
                    <button type="submit" class="btn btn-danger" asp-page-handler="DeletePost">
                        Delete
                    </button>
                </form>

            </div>

        </div>
    </div>