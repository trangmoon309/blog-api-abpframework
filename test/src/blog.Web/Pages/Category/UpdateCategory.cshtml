@page
@model blog.Web.Pages.Category.UpdateCategoryModel
@{
    ViewData["Title"] = "UpdateCategory";
}

@{ 

}

 <div class="container-fluid" style="background-color:white;position: absolute;top: 15%;padding-bottom:30px;padding-top:30px;">
        <div class="row">

            <div class="col-md-8 col-md-offset-2">

                <h1>Update Category</h1>
                <br />
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" class="form-control" id="title" asp-for="@Model.SpecificCategoryDto.Id"  />
                    <div class="form-group">
                        <label for="title">Title <span class="require">*</span></label>
                        <input type="text" class="form-control" id="title" asp-for="@Model.SpecificCategoryDto.Name" />
                    </div>

                    <div class="form-group">
                        <p><span class="require">*</span> - required fields</p>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" asp-page-handler="UpdateCategory">
                            Update
                        </button>

                        <button class="btn btn-default">
                            Cancel
                        </button>
                        @if (Model.flag)
                        {
                            <span class="text-success">Update Successfully!</span>
                        }
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>

                <form method="post">
                    <input type="hidden" class="form-control" id="title" name="cateId" asp-for="@Model.SpecificCategoryDto.Id" />
                    <button type="submit" class="btn btn-danger" asp-page-handler="DeleteCategory">
                        Delete
                    </button>
                </form>
            </div>

        </div>
    </div>