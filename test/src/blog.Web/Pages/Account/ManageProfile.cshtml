                                <label for="first_name"><h6>Name</h6></label>
                                <input type="text" class="form-control" id="first_name" asp-for="@Model.userDto.Name" placeholder="Name">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="phone"><h6>Phone Number</h6></label>
                                <input type="text" class="form-control" id="phone" asp-for="@Model.userDto.PhoneNumber" placeholder="Phone number">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="role"><h6>Roles:</h6></label>
                                <select type="text" class="form-control" id="role" asp-for="UpdateUserRole">
