

@page
@using blog.Web.Menus
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model blog.Web.Pages.Index2Model
@{
}
@inject IPageLayout PageLayout
@{
    PageLayout.Content.MenuItemName = blogMenus.Home;
}
<abp-card>
    <abp-card-body>
        <form asp-page-handler="GeneratePasswordlessToken" method="post">

            <abp-button button-type="Dark" type="submit">Generate passwordless token link</abp-button>

            @if (Model.PasswordlessLoginUrl != null)
            {
                <abp-card class="mt-3 p-3">
                    [@Model.PasswordlessLoginUrl](/en/commercial/2.4/guides/@Model.PasswordlessLoginUrl)
                </abp-card>
            }
        </form>
    </abp-card-body>
</abp-card>